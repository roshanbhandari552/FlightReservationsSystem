@using FlightReservationSystem.Models
@model List<ApplicationUser>

<nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">User Panel</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-action="GetEmployee" asp-controller="Employee">User List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Register" asp-controller="Account">Create New User</a>
                </li>
                
            </ul>

            <!-- 🔍 Search box (right side of navbar) -->
            <form asp-action="SearchUsers" method="get" class="d-flex">
                <input class="form-control me-2" type="search" name="query" placeholder="Search users..." aria-label="Search">
                <button class="btn btn-outline-primary" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>

<h2>User List</h2>

<a asp-controller="Account" asp-action="Register" class="btn btn-success mb-2">+ Create New User</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>
                    <a asp-controller="Account" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                   @*  <a asp-controller="Employee" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a> *@
                    <td>
                        <form asp-action="DeleteUser" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">
                                Delete
                            </button>
                        </form>
                     </td>
                </td>

            </tr>
        }
    </tbody>
</table>
