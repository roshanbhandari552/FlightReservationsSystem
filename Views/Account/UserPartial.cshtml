@model List<FlightReservationSystem.Models.ApplicationUser>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>
                        <a asp-controller="Account" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-action="DeleteUser" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-muted">No users found.</td>
            </tr>
        }
    </tbody>
</table>
