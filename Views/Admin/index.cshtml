<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Flight Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        body {
            display: flex;
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
        }
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
        }
        .sidebar h4 {
            padding: 20px;
            margin: 0;
            background-color: #23272b;
            text-align: center;
        }
        .sidebar .nav-link {
            color: white;
            padding: 10px 20px;
        }
        .sidebar .nav-link:hover {
            background-color: #495057;
        }
        .topbar {
            height: 60px;
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }
        .content-wrapper {
            flex-grow: 1;
            background-color: #f1f3f5;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>FLIGHT</h4>
        <nav class="nav flex-column">
            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Admin Dashboard</a>
            <a class="nav-link" asp-controller="Aircraft" asp-action="Index">Aeroplane</a>
            <a class="nav-link" asp-controller="Flight" asp-action="Index">Flight</a>
            <a class="nav-link" asp-controller="User" asp-action="Index">User</a>
        </nav>
    </div>

    <div class="d-flex flex-column w-100">
        <div class="topbar">
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search...">
            </form>
            <div class="d-flex align-items-center">
                <img src="~/images/profile.png" class="rounded-circle" alt="Admin" width="40" height="40">
                <div class="ms-2">
                    <strong>Admin Name</strong><br/>
                    <small>Administrator</small>
                </div>
            </div>
        </div>

        <main role="main" class="content-wrapper">
           
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
